<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swordrunner.swordrunner">

    <application
        android:name=".notification.App"
        requestlegacyexternalstorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwordRunner"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.ConfirmActivity"></activity>

        <activity android:name=".ui.profile.emailchange.EmailChangeActivity" />
        <activity android:name=".ui.profile.AvatarChangeActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.profile.ChangeUserNameActivity" />
        <activity android:name=".ui.profile.writingComment.WritingCommentActivity" />
        <activity android:name=".ui.profile.SelfsettingActivity" android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.profile.pwdchange.PasswordChangeActivity" />
        <activity android:name=".ui.profile.OthersProfileActivity" />
        <activity android:name=".ui.profile.MyGamelistActivity" />
        <activity android:name=".ui.profile.mycomments.MyCommentActivity" />

        <activity
            android:name=".ui.CreateGameActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MapActivity"
            android:label="Map"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.chatting.ChattingActivity"
            android:label="Chatting"
            android:parentActivityName=".ui.chatting.ChattingActivity" />
        <activity
            android:name=".ui.friends.AddFriendActivity"
            android:label="Add friend"
            android:parentActivityName=".ui.friends.AddFriendActivity" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>