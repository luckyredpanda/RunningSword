<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardParentWait"
    app:cardElevation="10dp"
    android:outlineSpotShadowColor="@color/gray"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatarImgWait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_width="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:civ_border_color="@color/blue"
            android:src="@drawable/unknown"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your ally is on the way"
            android:fontFamily="casual"
            android:layout_below="@+id/userNameWait"
            android:layout_toEndOf="@+id/avatarImgWait"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:id="@+id/lastSentenceWait"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:fontFamily="casual"
            android:layout_toEndOf="@+id/avatarImgWait"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/userNameWait"
            android:textColor="@color/red"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_below="@+id/avatarImgWait"
            android:layout_marginTop="2dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>