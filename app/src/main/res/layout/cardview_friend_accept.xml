<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardParentAccept"
    app:cardElevation="10dp"
    android:outlineSpotShadowColor="@color/gray"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </androidx.cardview.widget.CardView>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatarImgAccept"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_width="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:civ_border_color="@color/blue"
            android:src="@drawable/unknown"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can we fight together"
            android:fontFamily="casual"
            android:layout_below="@+id/userNameAccept"
            android:layout_toEndOf="@+id/avatarImgAccept"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/gold"
            android:id="@+id/lastSentenceAccept"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:fontFamily="casual"
            android:layout_toEndOf="@+id/avatarImgAccept"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/userNameAccept"
            android:textColor="@color/gold"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_below="@+id/avatarImgAccept"
            android:layout_marginTop="2dp"
            />

        <ImageButton
            android:id="@+id/acceptFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_accept_friend"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            />

        <ImageButton
            android:id="@+id/declineFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_decline_friend"
            android:layout_toStartOf="@id/acceptFriend"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>